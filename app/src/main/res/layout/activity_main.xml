<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="false" >

    <!-- Content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="88dp"
        android:background="#fff">

        <!-- Thumbnail :: Image-->
        <ImageView
            android:id="@+id/image_thumbnail"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_round"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="18dp"
            android:src="@android:drawable/btn_star"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="71dp"
            android:text="4.9"
            android:textSize="14dp"
            android:layout_marginLeft="40dp"/>

        <!-- Two-Line TextView -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_thumbnail"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">


            <TextView
                android:id="@+id/text_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="This is a title"/>

            <TextView
                android:id="@+id/text_subtitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/text_title"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:textColor="#727272"
                android:text="Here is Some text" />


        </RelativeLayout>

        <!-- Bottom line with actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_below="@id/image_thumbnail">

            <!-- Horizontal line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#ababab">

            </View>

            <!-- Like + Comment + Share -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@android:color/darker_gray"
                android:weightSum="4">

                <!-- Like -->
                <LinearLayout
                    android:id="@+id/layout_like"
                    android:layout_width="180dp"
                    android:background="@android:color/holo_red_dark"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"
                        android:textColor="#ffff"
                        android:text="Telepon"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

                </LinearLayout>

                <!-- Share -->
                <LinearLayout
                    android:id="@+id/layout_share"
                    android:layout_width="180dp"
                    android:background="@android:color/holo_green_light"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="50dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"
                        android:textColor="#ffff"
                        android:text="SMS"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="88dp"
            android:layout_marginTop="140dp">

            <!-- Thumbnail :: Image-->
            <ImageView
                android:id="@+id/image_thumbnail1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/round_round"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/menu"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="120dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/loc"/>

            <!-- Two-Line TextView -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/image_thumbnail1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">


                <TextView
                    android:id="@+id/text_title1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="8dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:text="This is a title"/>

                <TextView
                    android:id="@+id/text_subtitle1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/text_title1"
                    android:layout_marginTop="4dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:textSize="14sp"
                    android:textColor="#727272"
                    android:text="Here is Some text" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/image_thumbnail1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">


                <TextView
                    android:id="@+id/text_title12"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="120dp"
                    android:layout_marginRight="8dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:text="This is a title"/>

                <TextView
                    android:id="@+id/text_subtitle12"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/text_title12"
                    android:layout_marginTop="4dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:textSize="14sp"
                    android:textColor="#727272"
                    android:text="Here is Some text" />

            </RelativeLayout>
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@android:color/darker_gray"
            android:minHeight="88dp"
            android:layout_marginTop="310dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:minHeight="88dp"
            android:layout_marginTop="320dp">

            <!-- Thumbnail :: Image-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="tunai"
                android:textSize="16dp"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:text="rp 20.000"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:gravity="end"
                android:textSize="14dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:minHeight="88dp"
            android:layout_marginTop="370dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="No. Pesanan - "
                android:textAlignment="center"
                android:textSize="16dp"
                android:textStyle="bold"/>

        </RelativeLayout>
</RelativeLayout>
</RelativeLayout>